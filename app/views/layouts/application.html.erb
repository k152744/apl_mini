<!DOCTYPE html>
<html>
  <head>
    <title>AplMini</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    

  
  <body>
    <header class = "header">
      <div class="header__bar ">
        <h1 class="title"><a href="/">mini-apl</a></h1>
          <% if user_signed_in? %>
            <div class="user_in">
                <%= link_to "ログアウト", destroy_user_session_path ,method: :delete ,:style => "color:red;"%>        
                <a class="post" href="/messages/new">投稿する</a>
            </div>
          <% else %>
            <div class="user_out">
              <%= link_to "ログイン", new_user_session_path, :class => 'post' %>
              <%= link_to "新規登録", new_user_registration_path, :class => 'post' %>
            </div>
          <% end %>
      </div>
    </header>
      <%= yield %>
  </body>
</html>
